<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbarContentLesson1"
        layout="@layout/toolbar"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/back"
                    android:layout_margin="@dimen/Margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage"/>

                <TextView
                    android:layout_marginLeft="@dimen/Margin"
                    android:layout_marginRight="@dimen/Margin"
                    android:textColor="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage2"/>

                <TextView
                    android:layout_marginLeft="@dimen/Margin"
                    android:layout_marginRight="@dimen/Margin"
                    android:textColor="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage3"/>

                <TextView
                    android:layout_marginLeft="@dimen/Margin"
                    android:layout_marginRight="@dimen/Margin"
                    android:textColor="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage4"/>

                <TextView
                    android:layout_marginLeft="@dimen/Margin"
                    android:layout_marginRight="@dimen/Margin"
                    android:textColor="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage5"/>

                <TextView
                    android:layout_marginLeft="@dimen/Margin"
                    android:layout_marginRight="@dimen/Margin"
                    android:textColor="@color/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/JavaLanguage6"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>